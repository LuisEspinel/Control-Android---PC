<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65ebef">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="▲"
        android:id="@+id/btnArriba"
        android:textSize="30sp"
        android:onClick="ejecutarAccion"
        android:layout_alignTop="@+id/btnApagar"
        android:layout_alignLeft="@+id/btnAbajo"
        android:layout_alignStart="@+id/btnAbajo"
        android:textColor="#140cf8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnAbajo"
        android:text="▼"
        android:textSize="30sp"
        android:onClick="ejecutarAccion"
        android:layout_below="@id/btnArriba"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="#140cf8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnIzquierdo"
        android:text="»"
        android:textSize="32sp"
        android:textAlignment="center"
        android:onClick="ejecutarAccion"
        android:textStyle="bold"
        android:layout_above="@+id/btnExp"
        android:layout_toRightOf="@+id/btnAbajo"
        android:layout_toEndOf="@+id/btnAbajo"
        android:layout_marginLeft="5dp"
        android:textColor="#140cf8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnDerecha"
        android:text="«"
        android:textSize="32sp"
        android:textAlignment="center"
        android:onClick="ejecutarAccion"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btnAbajo"
        android:layout_toLeftOf="@+id/btnAbajo"
        android:layout_toStartOf="@+id/btnAbajo"
        android:layout_marginRight="5dp"
        android:textColor="#140cf8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/btnEnter"
        android:onClick="ejecutarAccion"
        android:textStyle="bold"
        android:layout_above="@+id/btnVolumen"
        android:layout_alignLeft="@+id/btnEscape"
        android:layout_alignStart="@+id/btnEscape"
        android:textColor="#140cf8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Explorardor"
        android:id="@+id/btnExp"
        android:onClick="ejecutarAccion"
        android:textStyle="bold"
        android:layout_below="@+id/btnAbajo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#140cf8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="ATRAS"
        android:id="@+id/btnAtras"
        android:onClick="ejecutarAccion"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btnExp"
        android:layout_toLeftOf="@+id/btnExp"
        android:layout_toStartOf="@+id/btnExp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="#140cf8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="CERRAR VENTANA"
        android:textSize="10sp"
        android:id="@+id/btnCerrarVentana"
        android:onClick="ejecutarAccion"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/btnApagar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnExp"
        android:layout_toEndOf="@+id/btnExp"
        android:textColor="#140cf8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="APAGAR"
        android:id="@+id/btnApagar"
        android:onClick="ejecutarAccion"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#140cf8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Off Sesion"
        android:id="@+id/btnSesion"
        android:onClick="ejecutarAccion"
        android:textStyle="bold"
        android:layout_below="@+id/btnAtras"
        android:layout_alignRight="@+id/btnAtras"
        android:layout_alignEnd="@+id/btnAtras"
        android:layout_marginLeft="5dp"
        android:textColor="#140cf8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTROL VOLUMEN"
        android:id="@+id/btnVolumen"
        android:onClick="ejecutarAccion"
        android:textStyle="bold"
        android:layout_below="@+id/btnExp"
        android:layout_centerHorizontal="true"
        android:textColor="#140cf8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="ESC"
        android:id="@+id/btnEscape"
        android:onClick="ejecutarAccion"
        android:textStyle="bold"
        android:layout_below="@+id/btnEnter"
        android:layout_toRightOf="@+id/btnVolumen"
        android:layout_toEndOf="@+id/btnVolumen"
        android:layout_marginLeft="5dp"
        android:textColor="#140cf8" />

</RelativeLayout>